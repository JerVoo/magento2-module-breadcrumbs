<?xml version="1.0" encoding="UTF-8"?>
<!--
    UI component configuration for 'Preferred Breadcrumb Category' attribute in category form.
-->
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="search_engine_optimization">
        <field name="preferred_breadcrumb_category" sortOrder="100" formElement="checkbox">
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Preferred Breadcrumb Category</label>
                <dataScope>preferred_breadcrumb_category</dataScope>
                <visible>true</visible>
                <componentType>field</componentType>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
</form>
